[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    chroma_db,
    .eggs,
    *.egg-info
max-complexity = 10
per-file-ignores =
    backend/tests/*.py:F401,F841
    backend/document_processor.py:C901
    backend/app.py:E402
